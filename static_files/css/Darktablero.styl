//DARK TABLERO MANUAL
@import 'nib'
@import 'nib/vendor'
@import 'nib/gradients'

vendor_prefixes = o ms webkit moz

body
	background #333333
	width 1200px !important
	overflow hidden
	margin auto 
	color #ffffff
	font-family 'Abel', sans-serif


section.wrap-left
	width 600px
	box-sizing border-box
	padding-left 5px
	padding-right 5px
	float left	
	background #041C0E
	border 10px solid #039449
	border-radius 20px 0 0 20px
	h3
		color white
		font-size 1.7em
		margin 5px
		font-weight normal

section.wrap-right
	width 600px
	box-sizing border-box
	padding 5px
	float left	
	background #053A20
	border 10px solid #039449
	margin-bottom 10px
	overflow: hidden
	border-radius 0 20px 20px 0
	.suma-ganadores
		width 100%
		color #000	
	.ultimas5
		display flex
		flex-direction row-reverse
		justify-content space-around
		padding 5px
		margin auto
		img
			width 100px
	.transparente
		width 100%
		height 300px
		background rgba(0, 0, 0, .5) !important
		padding 5px;
section.tablero
	width 100%
	box-sizing: border-box
	display flex
	justify-content  space-around
	margin-bottom 5px
	article.numero 
		display flex
		color #004B21
		align-items center
		justify-content center
		margin 1px
		box-shadow 0 1px 2px rgba(0, 0, 0, .3)
		font-size 2em
		cursor pointer
		
section.escogida
	width 100%
	text-align center
	animation: girar 2s infinite linear;
	img
		width 200px

	article.ganadora
		width 100px
		height 100px
		background linear-gradient(top, #ffffff,#F2F2F2)
		margin auto
		display flex
		align-items center
		justify-content center
		box-shadow 0 2px 4px rgba(0, 0, 0, .5)
		border-radius 50%
		font-size 4em	

section.ganador
	display none
	position fixed
	width 600px
	height auto
	padding 20px
	background #333
	border-radius 5px
	box-shadow 0 2px 4px rgba(0, 0, 0, .5)
	left 50%
	top 50%
	margin-top - 150px
	margin-left -300px
	z-index 20000


section.ganador1
	display none
	position fixed
	width 100%
	height 100vh
	padding 20px
	background rgba(#333, .9)
	overflow: none
	border-radius 5px
	box-shadow 0 2px 4px rgba(0, 0, 0, .5)
	top 0
	left 0
	z-index 3
	#mGanador
		display flex
		flex-wrap wrap
		justify-content space-around
		width 90% !important
		margin auto
		padding 20px
	
	
section.header
	width 1200px
	height 100px
	margin auto
	box-sizing border-box
	padding 10px
	overflow hidden
	margin-bottom: 5px
	article.logo
		float left
	article.sala
		margin-left 5px
		h1 
			font-size 1.5em
			margin-top 10px
	article.datos
		height 50px
		font-size .9em
		ul
			display flex
			justify-content space-around
			padding 0
			margin 0 
			list-style none
			li 
				display inline-block
				font-size 1.3em
				background #052814
				padding 3px 10px 
				border-radius 10px
button
	width 100px
	height 30px
	background #05A658
	color white
	font-size 1.2em
	border-radius 5px
	box-shadow 0 2px 4px rgba(0, 0, 0, .5)
	&:disabled
		opacity .5
		
#grande
	position fixed
	top 100px
	left "calc(50% - %s)" % 100px
	display none

.cartones-ganadores
	width 100%
	box-sizing border-box
	padding 2px	
	display flex
	justify-content  space-around
	margin-bottom 5px
	.figura-ganadoras
		width 80px
		height 60px
		text-align: center
		background #333
		box-shadow 0 2px 4px rgba(0, 0, 0, .5)		
		div.titulo
			width 100%
			background #000
			color #fff
			text-align center
			padding 2px
		label
			font-size 2em
			font-weight bold