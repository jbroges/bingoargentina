@import 'nib'
@import 'nib/vendor'
@import 'nib/gradients'

vendor_prefixes = o ms webkit moz
@font-face
	font-family Avian
	font-style normal
	src url(../fonts/Avian.ttf)


@font-face
	font-family SheepingDogs
	font-style normal
	src url(../fonts/SheepingDogs.ttf)


media_queries = {
	mobile  : "only screen and (max-width: 600px)",
	tablet  : "only screen and (min-width: 601px) and (max-width: 800px)",
	desktop : "only screen and (min-width: 801px)"
}

for_breakpoint(breakpoints)
	conditions = ()
	for breakpoint in breakpoints
		push(conditions, media_queries[breakpoint])
	conditions = join(", ", conditions)
	@media conditions
	{block}


body 
	font-family sans-serif
	background #ECEFF1

section.wrap
	max-width 1200px
	margin auto
	box-sizing border-box
	overflow hidden
	header
		width 100%
		max-heigth 400px
		background #E10B17
		overflow hidden		
		article.logo
			float left
			width 40%
			img
				width 100%
				margin 0px
				padding 0px
			.img-banner-top
				height 100%
		article.slider
			width 60%
			float left
			img
				width 100%
				
section.navegation
	width 100%
	background #E10B17
	border-top  1px solid #fff
	overflow hidden
	#btn-menu
		display none
	label 
		display none
		color #fff
		font-size 1.5em
		padding 10px
		width 30px
		height 30px
		cursor pointer
		border-right 1px solid #fff
		&:hover
			background rgba(0, 0, 0, .3)
		+for_breakpoint(tablet mobile)
			display block
		
	ul 
		padding 0px
		list-style none
		display flex
		margin 0px
		transition all 0.5s 		
		+for_breakpoint(tablet mobile)
			position absolute
			background #E10B17
			flex-direction column
			width 70%
			margin-left -70%
		li 
			border-right 1px solid #fff
			&:hover
				background rgba(0, 0, 0, .3)
			+for_breakpoint(tablet mobile)
				border-top 1px solid #fff
			a
				text-decoration none
				display block
				padding 15px 20px
				color #fff

section.videos
	width 100%
	margin-top: 20px
	display flex
	flex-wrap wrap
	justify-content: space-around;
	box-sizing border-box 
	padding 0px 20px
	article.video
		cursor pointer
		background #fff
		width 300px
		height 220px
		box-sizing border-box
		padding 5px
		box-shadow 3px 3px 1px #888
		margin-bottom 10px
		overflow hidden
		&:hover
			background rgba(0, 0, 0, .3)
		.imagen
			width 290px
			height 150px
			overflow hidden
			margin-bottom 5px
			img
				transition all 1s ease
				&:hover
					transform scale(1.25)

section.seccion2
	width 100%
	display flex
	+for_breakpoint(tablet mobile)
		width 100%
		flex-direction column
	section.noticias
		max-width 900px
		display flex
		flex-wrap wrap
		justify-content: space-around;
		box-sizing border-box 
		article.noticia
			cursor pointer
			background #fff
			width 280px
			height 220px
			box-sizing border-box
			padding 5px
			box-shadow 3px 3px 1px #888
			margin-bottom 10px
			overflow hidden	
			&:hover
				background rgba(0, 0, 0, .3)
			.imagen
				width 270px
				height 150px
				overflow hidden
				margin-bottom 5px
				img
					transition all 1s ease
					&:hover
						transform scale(1.25)
		article.public-noticia
			width 100%
			img 
				width 100%
	section.sidebar
		width 300px
		box-sizing border-box
		padding 0 5px
		img 
			margin auto
			width 290px
			margin-bottom 10px
		+for_breakpoint(tablet mobile)
			width 100%
			display flex
			justify-content space-around
			flex-wrap wrap

section.publi-banner
	margin-top 10px
	margin-bottom 10px
	img
		width 100%

footer
	width 100%
	height 50px
	background #E10B17
	color #fff
	margin-top 10px